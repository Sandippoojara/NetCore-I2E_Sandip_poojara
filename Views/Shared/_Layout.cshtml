<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Event Management</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Event Management System</h1>

        <nav>
            <a asp-controller="Event" asp-action="Index">Events</a> |

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <span>Welcome, @User.Identity.Name!</span>
 
            
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" style="display:inline">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none; background:none;">Logout</button>
                </form>
            }
            else
            {
            <a asp-area="Identity" asp-page="/Account/Login">Login</a>
 
            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
}
        </nav>
        <hr />
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <hr />
        <p>&copy; 2026 - Event Management System</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
