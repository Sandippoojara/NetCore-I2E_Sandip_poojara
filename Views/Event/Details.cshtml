@model EventManagementSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.Title</h4>
                </div>

                <div class="card-body">
                    <p class="card-text">@Model.Description</p>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">
                            <strong>Date:</strong> @Model.EventDate.ToString("dddd, MMMM dd, yyyy")
                        </li>
                        <li class="list-group-item">
                            <strong>Location:</strong> @Model.Location
                        </li>
                        <li class="list-group-item">
                            <strong>Capacity:</strong> @Model.Capacity
                        </li>
                    </ul>

                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Back to Events
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
